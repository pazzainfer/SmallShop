<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60.0dip"
    android:layout_gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:marqueeRepeatLimit="marquee_forever" >

    <ImageView
        android:id="@+id/dialog_goods_select_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8.0dip"
        android:layout_toRightOf="@id/dialog_goods_select_item_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_goods_select_item_name"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="20.0dip"
            android:textStyle="bold" />

        <LinearLayout 
		    android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dip"
		    >
			<TextView
			    android:text="@string/goods_list_price_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
				android:textStyle="bold"
		        />
			<TextView
				android:id="@+id/dialog_goods_select_item_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
		        />
			<TextView
			    android:text="@string/goods_list_price_per"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
		        />
			<TextView
				android:id="@+id/dialog_goods_select_item_unit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
		        />
		</LinearLayout>

        <TextView
            android:id="@+id/dialog_goods_select_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>