<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:orientation="vertical" >
        <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="70dip"
	   	    android:layout_marginTop="10.0dip"
   	    	android:orientation="horizontal"
   	    	android:gravity="center_vertical"
    		android:background="@drawable/item_corner_bg">
   	        <TextView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
	    		android:layout_marginLeft="10.0dip"
	    		android:drawableLeft="@drawable/mustinput"
		   	    android:textSize="18sp"
		   	    android:text="@string/customer_name_title"/>
   	        <EditText
		   	    android:id="@+id/customer_add_name_input"
		   	    android:hint="@string/customer_name_hint"
		   	    android:inputType="text"
			    android:layout_marginLeft="10.0dip"
			    android:layout_marginRight="10.0dip"
			    android:paddingLeft="10.0dip"
		   	    android:layout_width="fill_parent"
		   	    android:layout_height="40.0dip"
    			android:background="@drawable/view_border"
	    		android:imeOptions="actionNext"
	    		android:nextFocusForward="@+id/customer_add_sex_input"
		   	    />
   	    </LinearLayout>
   	    <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="70dip"
	   	    android:layout_marginTop="10.0dip"
   	    	android:orientation="horizontal"
   	    	android:gravity="center_vertical"
    		android:background="@drawable/item_corner_bg">
   	        <TextView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
	    		android:layout_marginLeft="10.0dip"
	    		android:drawableLeft="@drawable/mustinput"
		   	    android:textSize="18sp"
		   	    android:text="@string/customer_sex_title"/>
   	        <Spinner
		   	    android:id="@+id/customer_add_sex_input"
		   	    android:hint="@string/customer_sex_hint"
		   	    android:entries="@array/array_sex"
			    android:layout_marginLeft="10.0dip"
			    android:layout_marginRight="10.0dip"
		   	    android:layout_width="fill_parent"
		   	    android:layout_height="40.0dip"
		   	    />
   	    </LinearLayout>
   	    <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="70dip"
	   	    android:layout_marginTop="10.0dip"
   	    	android:orientation="horizontal"
   	    	android:gravity="center_vertical"
    		android:background="@drawable/item_corner_bg">
   	        <TextView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
	    		android:layout_marginLeft="10.0dip"
	    		android:drawableLeft="@drawable/mustinput"
		   	    android:textSize="18sp"
		   	    android:text="@string/customer_address_title"/>
   	        <EditText
		   	    android:id="@+id/customer_add_address_input"
		   	    android:hint="@string/customer_address_hint"
		   	    android:inputType="text"
			    android:layout_marginLeft="10.0dip"
			    android:layout_marginRight="10.0dip"
			    android:paddingLeft="10.0dip"
		   	    android:layout_width="fill_parent"
		   	    android:layout_height="40.0dip"
    			android:background="@drawable/view_border"
	    		android:imeOptions="actionNext"
	    		android:nextFocusForward="@+id/customer_add_remarks_input"
		   	    />
   	    </LinearLayout>
   	    <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginTop="10.0dip"
   	    	android:orientation="horizontal"
   	    	android:gravity="center_vertical"
    		android:background="@drawable/item_corner_bg">
   	        <TextView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
	    		android:layout_marginLeft="24.0dip"
		   	    android:textSize="18sp"
		   	    android:text="@string/customer_remarks_title"/>
   	        <EditText
		   	    android:id="@+id/customer_add_remarks_input"
		   	    android:hint="@string/customer_remarks_hint"
		   	    android:singleLine="false"
		   	    android:gravity="start"
		   	    android:inputType="textMultiLine"
			    android:layout_marginLeft="10.0dip"
			    android:layout_marginRight="10.0dip"
			    android:layout_marginTop="10.0dip"
			    android:layout_marginBottom="10.0dip"
			    android:padding="5.0dip"
		   	    android:layout_width="fill_parent"
		   	    android:layout_height="150.0dip"
    			android:background="@drawable/view_border"
	    		android:imeOptions="actionDone"
		   	    />
   	    </LinearLayout>
    </LinearLayout>
</ScrollView>