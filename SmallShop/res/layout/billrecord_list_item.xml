<?xml version="1.0" encoding="utf-8"?>
<!-- 
	1.android:descendantFocusability：ViewGroup阻止其子View接收焦点

--> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="100.0dip"
	android:layout_gravity="center_vertical"
	android:descendantFocusability="blocksDescendants"
	android:marqueeRepeatLimit="marquee_forever">
	<ImageView  
        android:id="@+id/billrecord_list_item_image"
		android:layout_marginTop="5.0dip"
		android:layout_marginLeft="5.0dip"
		android:layout_marginBottom="5.0dip"
		android:layout_marginRight="5.0dip"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/billrecord_state_debt"
         />
	<ImageView 
	    android:id="@+id/billrecord_list_arrow"
	    android:layout_centerVertical="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:src="@drawable/list_arrow_right"
	    />
	<ImageView 
	    android:id="@+id/billrecord_list_checkbox"
	    android:layout_centerVertical="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
		android:src="@drawable/checkbox_no"
	    />
	<LinearLayout 
        android:id="@+id/billrecord_list_data_layout"
	    android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="8.0dip"
        android:layout_toRightOf="@id/billrecord_list_item_image"
        android:layout_toLeftOf="@id/billrecord_list_arrow"
	    >
	    <LinearLayout 
		    android:orientation="horizontal"
		    android:layout_gravity="center_vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip">
		<TextView
			android:id="@+id/billrecord_list_item_custname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20.0dip"
			android:textStyle="bold"
			android:singleLine="true"
	        />
		<TextView
			android:id="@+id/billrecord_list_item_total"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18.0dip"
			android:drawableLeft="@drawable/money"
			android:layout_marginLeft="30.0dip"
			android:gravity="center_vertical"
			android:singleLine="true"
	        />
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
		    >
			<TextView
				android:id="@+id/billrecord_list_item_goodsname"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
		        />
			<TextView
			    android:id="@+id/billrecord_list_item_goodsnum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20.0dip"
				android:textSize="14.0dip"
		        />
			<TextView
				android:id="@+id/billrecord_list_item_goodsunit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14.0dip"
		        />
		</LinearLayout>
			<TextView
				android:id="@+id/billrecord_list_item_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:textSize="14.0dip"
		    />
		<TextView
			android:id="@+id/billrecord_list_item_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/billrecord_list_item_custid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/billrecord_list_item_cleardate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
	    />
	</LinearLayout>
</RelativeLayout>